<Page x:ConnectionId='1'
    x:Class="CaregiverIKNOWU.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CaregiverIKNOWU"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:converter="using:CaregiverIKNOWU.Controls"
    xmlns:data="using:CaregiverIKNOWU.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Opacity="0.8">

    <Page.Resources>
        <converter:BitmapToBrushConverter x:Key="BitmapToBrushConverter" />

        <DataTemplate x:Key="PersonItemTemplate"                         >
            <StackPanel x:ConnectionId='5' x:Name="Grid_item" CanDrag="false" Orientation="Vertical" Margin="5" Width="160" Height="240" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:ConnectionId='6'                               Height="170" Width="170" HorizontalAlignment="Center"/>
                <Viewbox HorizontalAlignment="Stretch" Height="30">
                    <TextBlock x:ConnectionId='8'                      FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="WrapWholeWords"/>
                </Viewbox>
                <Viewbox HorizontalAlignment="Stretch" Height="30">
                    <TextBlock x:ConnectionId='7'                          FontWeight="Normal" HorizontalAlignment="Center" TextWrapping="WrapWholeWords"/>
                </Viewbox>
                <!--<Viewbox HorizontalAlignment="Stretch" Height="30">
                    <Button x:Name="updateInfoButton" Content="Update" IsEnabled="True"  Margin="0,0,0,0" HorizontalAlignment="Center" Width="200" FontSize="30" Click="updateInfoButton_Click" />
                </Viewbox>-->
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="FaceItemTemplate"                       >
            <StackPanel x:ConnectionId='2' x:Name="Grid_item" CanDrag="false" Orientation="Vertical" Margin="5" Width="90" Height="90" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:ConnectionId='3'                         Height="70" Width="70" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock x:ConnectionId='4'                            TextAlignment="Center" FontSize="12"/>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar Background="#CCE6E6E6" Content="Patient Name: &#xD;&#xA;     John">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='9' 
                    x:Name="Add"
                    Icon="AddFriend"
                    Label="Add New Patient"/>
                <!--Tapped="AddPatientTapped"-->
                
                <!--<AppBarButton 
                    x:Name="FaceDetectionButton"
                    Tapped="FaceDetectionButton_Tapped" 
                    Label="Face detection">
                    <Viewbox>
                        <Grid>
                            <SymbolIcon 
                                Name="FaceDetectionDisabledIcon" 
                                Symbol="WebCam" 
                                Visibility="Visible"/>
                            <SymbolIcon 
                                Name="FaceDetectionEnabledIcon" 
                                Symbol="Contact2" 
                                Visibility="Collapsed"/>
                        </Grid>
                    </Viewbox>
                </AppBarButton>-->

                <AppBarButton x:ConnectionId='10'
                    x:Name="SettingsButton"
                    Icon="Setting"
                    Label="Settings" 
                                                  />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>


    <Grid x:ConnectionId='11' x:Name="rootGrid">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Brushed_metal_texture.jpg"/>
        </Grid.Background>
        <Grid x:ConnectionId='12' 
            x:Name="backgroundGrid"
            Width="Auto"
            Height="Auto"
                                                                                                                        >
            <Grid.RowDefinitions>
                <RowDefinition Height="91*"/>
                <RowDefinition Height="154*"/>
                <RowDefinition Height="75*"/>
            </Grid.RowDefinitions>

            <Grid x:ConnectionId='44' x:Name="faceDatabase" Visibility="Visible"  Margin="0,2.6,0,6.4" Background="#E5FFFFFF" Grid.Row="1" Canvas.ZIndex="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="19*"/>
                    <RowDefinition Height="131*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="843*"/>
                    <ColumnDefinition Width="181*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Person Database: " FontWeight="SemiBold" Grid.Column="0" Grid.Row="0" TextWrapping="WrapWholeWords" Margin="10,10,0,5" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:ConnectionId='46' x:Name="statusTextBlock" Text=" " FontWeight="Normal" Grid.Column="0" Grid.Row="0" TextWrapping="WrapWholeWords" Margin="0,5,10,5" FontSize="15" HorizontalAlignment="Right"  VerticalAlignment="Center" Foreground="#FFFF2B2B"/>
                <GridView x:ConnectionId='47' x:Name="personGridView" Margin="10,5,10,10"  Grid.Column="0" Grid.Row="1"
                                                         
                          ItemTemplate="{StaticResource PersonItemTemplate}" BorderBrush="#FF494949" BorderThickness="1,1,1,1"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollMode="Disabled"
                          CanDragItems="False" 
                          IsItemClickEnabled="True"                                                                                        
                          >
                    <GridView.Background>
                        <SolidColorBrush Color="Gray" Opacity="0"/>
                    </GridView.Background>
                </GridView>
                <Button x:ConnectionId='48' x:Name="addPersonButton" IsEnabled="True" Grid.Row="1" Margin="9.8,10.4,10,10.2" HorizontalAlignment="Stretch" Grid.Column="1" VerticalAlignment="Stretch"                                                                                                                                 >
                    <Button.Background>
                        <ImageBrush x:ConnectionId='49' x:Name="addPersonButton_imageBrush" Stretch="Uniform" ImageSource="Assets/Add_person.png" Opacity="0.9"/>
                    </Button.Background>
                    <!--<Button.Template>
                        <ControlTemplate TargetType="Button" >
                            <Image Name="addPersonButton_image" Opacity="0.9" Source="Assets/Add_person.png"></Image>
                        </ControlTemplate>
                    </Button.Template>-->
                </Button>
            </Grid>


            <Image x:ConnectionId='45' x:Name="WarningImage" Visibility="Collapsed" Source="Assets/Warning.png" HorizontalAlignment="Right" Height="100" Margin="0,50,50,0" VerticalAlignment="Top" Width="100"                             />










        </Grid>
        <!--End rootGrid-->


        <!--ContentDialog 4 creating/updating a Person -->
        <ContentDialog x:ConnectionId='13' x:Name="PersonDialog" Title="Person Info Dialog"
                        PrimaryButtonText="Done"
                        IsPrimaryButtonEnabled="True"
                        SecondaryButtonText="Cancel"
                        Visibility="Visible"
                        MaxWidth="{Binding ActualWidth, ElementName=pageRoot}">
            <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:ConnectionId='20' x:Name="PersonDialogPanel" BorderBrush="#FFFB2323" BorderThickness="3">
                    <TextBlock Text="Personal Icon and Basic Infomation: " TextAlignment="Center"/>
                    <Grid x:ConnectionId='21' x:Name="BasicInfoGrid" Margin="0,0,0,0" Height="150">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Image x:ConnectionId='39' x:Name="defaultImage" Source="Assets/Square150x150Logo.scale-200.png"
                           Margin="0,0,10.8,0.4" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"  Height="150" Width="150"/>
                        <TextBox x:ConnectionId='40' x:Name="PersonNameInput" Header="Person Name: " PlaceholderText="Enter person name here" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Width="{Binding ActualWidth, ElementName=PersonRelationInput}" Height="60"/>
                        <TextBox x:ConnectionId='41' x:Name="PersonRelationInput" Header="Person Relation: " PlaceholderText="Enter person relation here" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Height="60" Width="192"/>
                        <RadioButton x:ConnectionId='42' x:Name="familiarRadioButton" Content="Familiar Person" GroupName="familiarButtonGroup" Tag="Familiar"                                       Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <RadioButton x:ConnectionId='43' x:Name="strangeRadioButton" Content="Stranger ! ! !" GroupName="familiarButtonGroup" Tag="Strange"                                       Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </Grid>
                    <Grid x:ConnectionId='22' x:Name="RiskGrid" Visibility="Visible"  Margin="0,0,0,0" BorderBrush="#FFF91B1B" BorderThickness="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:ConnectionId='36' x:Name="riskSlider" Header="Risk Factor Estimate" Width="200"                                        Margin="10,5,10,5" Grid.Column="0" HorizontalAlignment="Right" Maximum="5" LargeChange="1"/>
                        <Button x:ConnectionId='37'  x:Name="sendWarningButton" Content="Send a Warning Message" Width="200" Grid.Column="1" HorizontalAlignment="Center" Margin="10,5,10,5"                                />
                        <TextBlock x:ConnectionId='38' x:Name="sendWarningTextBlock" Text=""  TextAlignment="Center" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,10,5" Foreground="#FFFD2B2B"/>
                    </Grid>
                    <TextBlock Text="Face Database: "  TextAlignment="Center"/>
                    <Grid x:ConnectionId='23' x:Name="FaceViewGrid" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <GridView x:ConnectionId='33' x:Name="faceGridView" Height="100" Grid.Column="0" Grid.RowSpan="2" Margin="10,5,10,5"
                              CanDragItems="False" 
                              ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollMode="Disabled"
                              HorizontalAlignment="Stretch"  VerticalAlignment="Center"
                              IsItemClickEnabled="True"
                                                          
                              ItemTemplate="{StaticResource FaceItemTemplate}"                                                                                    
                              >
                            <GridView.Background>
                                <SolidColorBrush Color="Gray" Opacity="0.25"/>
                            </GridView.Background>
                        </GridView>

                        <Button x:ConnectionId='34' x:Name="AddNewFaceFromCamera" Content="Add Face from Camera" 
                            Grid.Column="1" Grid.Row="0" Width="180"
                            HorizontalAlignment="Center"  VerticalAlignment="Center"
                            BorderThickness="2" BorderBrush="LightSlateGray"                                    />
                        <Button x:ConnectionId='35' x:Name="AddNewFaceFromFile" Content="Add Face from File" 
                            Grid.Column="1"  Grid.Row="1" Width="180"
                            HorizontalAlignment="Center"  VerticalAlignment="Center"
                            BorderThickness="2" BorderBrush="LightSlateGray"                                  />
                    </Grid>
                    <Grid x:ConnectionId='24' x:Name="ImagePreviewGrid" Height="200">
                        <Image x:ConnectionId='31' x:Name="FaceImagePreview" Source="Assets/Square150x150Logo.scale-200.png"
                           Margin="5,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        <Button x:ConnectionId='32' x:Name="deleteFaceButton" IsEnabled="False" Content="Delete This Face" HorizontalAlignment="Right" Margin="0,0,10,0"                               />
                    </Grid>
                    <Button x:ConnectionId='25' x:Name="SetDefaultButton" IsEnabled="False" Content="Set this Face as the Default Icon" VerticalAlignment="Center" HorizontalAlignment="Center"                               />
                    <StackPanel x:ConnectionId='26' x:Name="VideoStackPanel" Visibility="Collapsed">
                        <TextBlock />
                        <Button x:ConnectionId='27' Name="CameraStreamingButton" Content="Watch Real-Time Video"                                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <CaptureElement x:ConnectionId='28' Name="CamPreview" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" />
                        <Canvas x:ConnectionId='29' Name="VisualizationCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
                        <TextBlock x:ConnectionId='30' x:Name="TimerCounterBlock" Text="TimeCounted: "  Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </ContentDialog>



        <Popup x:ConnectionId='14'
            x:Name="SettingsPopup"
            IsLightDismissEnabled="True"
            IsOpen="False">

            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition Edge="Right" />
                </TransitionCollection>
            </Popup.ChildTransitions>

            <Border x:ConnectionId='17'
                x:Name="rootPopupBorder"
                Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{StaticResource SystemControlForegroundAccentBrush}"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Style="{StaticResource TitleTextBlockStyle}" 
                        Text="I KNOW U"
                        Margin="10,10,0,0"/>
                    <TextBlock
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="For Caregiver"
                        Margin="10,0,0,10">
                    </TextBlock>
                    <TextBlock x:ConnectionId='18' x:Name="patientNameTextBlock"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="(Patient Name: John)"
                        Margin="10,0,0,10">
                    </TextBlock>
                    <ToggleSwitch x:ConnectionId='19'   Name="BingWallpaperToggle" Visibility="Visible" 
                            Margin="0,10,10,0" Width="281" HorizontalAlignment="Right"
                            Header="Use Bing wallpaper as background"
                                                                                          Height="74" VerticalAlignment="Top" />


                </StackPanel>
            </Border>
        </Popup>

        <Button x:ConnectionId='15' x:Name="testButton" Visibility="Collapsed"   Content="Test Button&#xD;&#xA;ddd" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="#FFF34A4A" Width="155" Height="77"                         />
        <Image x:ConnectionId='16' x:Name="testImage" Source="Assets/Square150x150Logo.scale-200.png" Visibility="Collapsed"   HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top"  Width="155" Height="77" />




    </Grid>
</Page>

